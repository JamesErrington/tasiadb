{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "zig test --test-no-exec ${file}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "find-test",
            "type": "shell",
            "command": "find zig-cache -name test | tr -d '\n' > ${workspaceFolder}/.cache/zig-test-loc.txt",
            "problemMatcher": [],
            "group": "none",
            "dependsOn": "build-test"
        }
    ]
}
